<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:padding="16dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stepTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_log_step_1"
            android:textColor="@color/text_primary"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stepSubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/daily_log_help"
            android:textColor="@color/text_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:background="@color/accent_soft">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/teal_primary" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stepOneCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/surface_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pain_level"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/painSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10" />

                <TextView
                    android:id="@+id/painValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/temperature">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tempEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/redness"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/rednessSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/clinical_levels" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/swelling"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/swellingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/clinical_levels" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/dischargeSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/discharge" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stepTwoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/surface_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobility"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/mobilitySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/mobility_levels" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/sleep_hours">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sleepHoursEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/appetite"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/appetiteSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/appetite_levels" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/fatigue"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/fatigueSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/fatigue_levels" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/mood"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/moodSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/mood_levels" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stepThreeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/surface_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/antibioticsCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/antibiotics_taken" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/painMedsCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pain_meds_taken" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/dressingChangedCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dressing_changed" />

                <Button
                    android:id="@+id/submitLogButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="@color/teal_primary"
                    android:text="@string/submit_log" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/prevStepButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/previous"
                android:visibility="gone" />

            <Button
                android:id="@+id/nextStepButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_primary"
                android:text="@string/next" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
